<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/activity_jump_rope"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="horizontal">

    <LinearLayout
        android:layout_width="120dp"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <ImageView
            android:id="@+id/iv_photo"
            android:layout_width="match_parent"
            android:layout_height="150dp"
            android:layout_centerHorizontal="true"
            android:scaleType="centerCrop"
            android:src="@drawable/default_head_portrait" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/tv_studentName"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:padding="5dp"
                android:text="@string/studentName" />

            <TextView
                android:id="@+id/tv_studentName_edit"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_alignBaseline="@+id/tv_studentName" />
            <!--android:layout_toEndOf="@+id/tv_studentName"-->
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/tv_studentCode"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:padding="5dp"
                android:text="@string/studentCode" />

            <TextView
                android:id="@+id/tv_studentCode_edit"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignBaseline="@+id/tv_studentCode" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/tv_grade"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:padding="5dp"
                android:text="@string/grades" />

            <TextView
                android:id="@+id/tv_grade_edit"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignBaseline="@+id/tv_grade" />
        </LinearLayout>

    </LinearLayout>

    <View
        android:layout_width="1dp"
        android:layout_height="match_parent"
        android:background="@color/black" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <TextClock
            android:id="@+id/tc"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:layout_gravity="center_horizontal"
            android:format12Hour="yyyy-MM-dd hh:mm:ss"
            android:format24Hour="yyyy-MM-dd kk:mm:ss"
            android:padding="5dp" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <com.feipulai.host.view.StuSearchEditText
                android:id="@+id/et_select"
                android:layout_width="0dp"
                android:layout_height="35dp"
                android:layout_alignParentBottom="true"
                android:layout_centerHorizontal="true"
                android:layout_margin="5dp"
                android:layout_weight="1"
                android:background="#ffcccccc"
                android:cursorVisible="true"
                android:digits="0123456789X"
                android:gravity="center"
                android:hint="请输入考号或者刷身份证" />

            <ImageButton
                android:id="@+id/btn_code"
                android:layout_width="35dp"
                android:layout_height="35dp"
                android:layout_gravity="center_vertical"
                android:layout_margin="2dp"
                android:adjustViewBounds="true"
                android:background="@drawable/scan"
                android:scaleType="centerCrop" />

        </LinearLayout>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical">

                <GridView
                    android:id="@+id/gv_pull_stu"
                    android:layout_width="match_parent"
                    android:layout_height="0dp"
                    android:layout_weight="1"
                    android:horizontalSpacing="1dp"
                    android:listSelector="@null"
                    android:numColumns="5"
                    android:stretchMode="columnWidth"
                    android:verticalSpacing="1dp" />

                <View
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:background="@color/black" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="30dp"
                    android:gravity="center_vertical"
                    android:orientation="horizontal">


                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="30dp"
                        android:drawableLeft="@drawable/shape_round_textview_red"
                        android:drawablePadding="10dp"
                        android:gravity="center_vertical"
                        android:text="连接中断" />


                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="30dp"
                        android:drawableLeft="@drawable/shape_round_textview_yellow"
                        android:drawablePadding="10dp"
                        android:gravity="center_vertical"
                        android:text="电量低" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="30dp"
                        android:drawableLeft="@drawable/shape_round_textview_grey"
                        android:drawablePadding="10dp"
                        android:gravity="center_vertical"
                        android:text="暂停使用" />

                </LinearLayout>

                <View
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:background="@color/black" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="50dp"
                    android:orientation="horizontal"
                    android:padding="5dp">

                    <Button
                        android:id="@+id/btn_hand_peidui"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_margin="5dp"
                        android:layout_weight="1"
                        android:background="@drawable/circle_corner_button_selector"
                        android:text="设备配对"
                        android:textColor="@color/white" />

                    <Button
                        android:id="@+id/btn_change_hand_group"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_margin="5dp"
                        android:layout_weight="1"
                        android:background="@drawable/circle_corner_button_selector"
                        android:text="切换分组"
                        android:textColor="@color/white" />

                    <Button
                        android:id="@+id/btn_hand_del"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_margin="5dp"
                        android:layout_weight="1"
                        android:background="@drawable/circle_corner_button_selector"
                        android:text="删除"
                        android:textColor="@color/white" />

                    <Button
                        android:id="@+id/btn_hand_del_all"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_margin="5dp"
                        android:layout_weight="1"
                        android:background="@drawable/circle_corner_button_selector"
                        android:text="全删除"
                        android:textColor="@color/white" />

                    <Button
                        android:id="@+id/btn_hand_change_bad"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_margin="5dp"
                        android:layout_weight="1"
                        android:background="@drawable/circle_corner_button_selector"
                        android:text="故障更换"
                        android:textColor="@color/white" />

                    <Button
                        android:id="@+id/btn_hand_start"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_margin="5dp"
                        android:layout_weight="1"
                        android:background="@drawable/circle_corner_button_selector"
                        android:text="开始计数"
                        android:textColor="@color/white" />

                </LinearLayout>

            </LinearLayout>

            <ListView
                android:id="@+id/lv_results"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:divider="@color/sbc_header_text"
                android:dividerHeight="1dp"
                android:visibility="gone" />

        </RelativeLayout>

    </LinearLayout>

</LinearLayout>
