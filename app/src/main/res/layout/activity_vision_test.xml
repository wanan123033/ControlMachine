<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"

    android:orientation="horizontal">


    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <LinearLayout
            android:id="@+id/ll_seach"
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:gravity="center_vertical"
            android:orientation="horizontal">

            <ImageView
                android:layout_width="128dp"
                android:layout_height="38dp"
                android:layout_marginLeft="15dp"
                android:src="@mipmap/icon_test_logo" />

            <com.feipulai.host.view.StuSearchEditText
                android:id="@+id/et_input_text"
                android:layout_width="360dp"
                android:layout_height="35dp"
                android:layout_marginLeft="15dp"
                android:layout_marginRight="3dp" />

            <TextView
                android:id="@+id/btn_scan"
                android:layout_width="80dp"
                android:layout_height="35dp"
                android:layout_centerVertical="true"
                android:layout_toLeftOf="@+id/tv_start_test"
                android:background="@color/colorAccent"
                android:gravity="center"
                android:text="搜索"
                android:textColor="@color/white"
                android:textSize="20dp"
                android:visibility="gone" />

            <ImageView
                android:id="@+id/img_AFR"
                android:layout_width="60dp"
                android:layout_height="35dp"
                android:layout_marginLeft="20dp"
                android:layout_toLeftOf="@+id/tv_start_test"
                android:background="@drawable/btn_bg_green"
                android:gravity="center"
                android:padding="5dp"
                android:src="@mipmap/icon_afr"
                android:textColor="@color/white"
                android:textSize="20dp" />

            <TextView
                android:id="@+id/txt_led_setting"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_marginLeft="20dp"
                android:layout_toLeftOf="@+id/tv_start_test"
                android:background="@color/colorAccent"
                android:drawableLeft="@mipmap/icon_led_setting"
                android:drawablePadding="6dp"
                android:gravity="center"
                android:paddingLeft="8dp"
                android:paddingRight="8dp"
                android:text="外接屏幕"
                android:textColor="@color/white"
                android:textSize="20dp" />

            <TextView
                android:id="@+id/tv_device_pair"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_marginLeft="10dp"
                android:background="@color/colorAccent"
                android:gravity="center"
                android:paddingLeft="8dp"
                android:paddingRight="8dp"
                android:text="设备配对"
                android:textColor="@color/white"
                android:textSize="20dp" />
        </LinearLayout>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_below="@+id/ll_seach"
            android:background="@color/white"
            android:orientation="vertical">


            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="@color/white">


                <ImageView
                    android:id="@+id/iv_e"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerInParent="true"
                    android:src="@drawable/icon_e"
                    android:visibility="gone" />


                <CheckBox
                    android:id="@+id/cb_device_state"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentRight="true"
                    android:layout_alignParentBottom="true"
                    android:layout_margin="30dp"
                    android:button="@null"
                    android:checked="true"
                    android:clickable="false"
                    android:drawableLeft="@drawable/cb_device_state"
                    android:drawablePadding="10dp"
                    android:enabled="false"
                    android:text="设备状态"
                    android:textColor="@color/black"
                    android:textSize="16sp"
                    android:visibility="gone" />


            </RelativeLayout>

            <RelativeLayout
                android:id="@+id/view_test_result"
                android:layout_width="match_parent"
                android:layout_height="150dp"
                android:layout_alignParentBottom="true"
                android:visibility="gone">


                <LinearLayout
                    android:id="@+id/view_content_result"
                    android:layout_width="579dp"
                    android:layout_height="match_parent"
                    android:orientation="horizontal">

                    <LinearLayout
                        android:layout_width="193dp"
                        android:layout_height="match_parent"
                        android:background="@color/test_first_color"
                        android:orientation="vertical"
                        android:padding="5dp">


                        <TextView
                            android:id="@+id/txt_left_result"
                            android:layout_width="match_parent"
                            android:layout_height="97dp"
                            android:background="@mipmap/icon_test_result_bg"
                            android:gravity="center"
                            android:textColor="@color/white"
                            android:textSize="30sp" />


                        <TextView
                            style="@style/style_setting_tv_title"
                            android:text="左视力"
                            android:textColor="@color/white" />
                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="193dp"
                        android:layout_height="match_parent"
                        android:background="@color/test_first_color"
                        android:orientation="vertical"
                        android:padding="5dp">


                        <TextView
                            android:id="@+id/txt_right_result"
                            android:layout_width="match_parent"
                            android:layout_height="97dp"
                            android:background="@mipmap/icon_test_result_bg"
                            android:gravity="center"
                            android:textColor="@color/white"
                            android:textSize="30sp" />


                        <TextView
                            style="@style/style_setting_tv_title"
                            android:text="右视力"
                            android:textColor="@color/white" />
                    </LinearLayout>


                </LinearLayout>

                <LinearLayout
                    android:id="@+id/view_skip"
                    android:layout_width="170dp"
                    android:layout_height="match_parent"
                    android:layout_alignParentRight="true"
                    android:layout_alignParentBottom="true"
                    android:layout_weight="1"
                    android:background="@color/white"
                    android:gravity="center"
                    android:orientation="vertical"
                    android:padding="15dp">

                    <TextView
                        android:id="@+id/txt_start_test"
                        android:layout_width="match_parent"
                        android:layout_height="0dp"
                        android:layout_marginBottom="@dimen/sp_12"
                        android:layout_weight="1"
                        android:background="@drawable/btn_bg_blue"
                        android:gravity="center"
                        android:text="开始"
                        android:textColor="@color/white"
                        android:textSize="22sp"
                        android:visibility="gone" />

                    <TextView
                        android:id="@+id/txt_stu_skip"
                        android:layout_width="match_parent"
                        android:layout_height="0dp"
                        android:layout_weight="1"
                        android:background="@drawable/btn_bg_blue"
                        android:gravity="center"
                        android:text="跳过"
                        android:textColor="@color/white"
                        android:textSize="22sp"
                        android:visibility="gone" />

                    <TextView
                        android:id="@+id/tv_foul"
                        android:layout_width="match_parent"
                        android:layout_height="0dp"
                        android:layout_margin="5dp"
                        android:layout_weight="1"
                        android:background="@drawable/btn_bg_blue"
                        android:gravity="center"
                        android:text="犯规"
                        android:textColor="@color/white"
                        android:textSize="22sp"
                        android:visibility="gone" />

                </LinearLayout>
            </RelativeLayout>


        </RelativeLayout>


        <ListView
            android:id="@+id/lv_results"
            android:layout_width="321dp"
            android:layout_height="260dp"
            android:layout_marginLeft="190dp"
            android:layout_marginTop="40dp"
            android:background="@drawable/bg_white_radius_10"
            android:divider="@color/sbc_header_text"
            android:dividerHeight="1dp"
            android:paddingLeft="20dp"
            android:paddingTop="@dimen/dp_10"
            android:paddingRight="20dp"
            android:paddingBottom="@dimen/dp_10"
            android:visibility="gone" />

        <FrameLayout
            android:id="@+id/frame_camera"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_below="@+id/ll_seach"
            android:background="@color/black"
            android:visibility="gone" />

    </RelativeLayout>


</LinearLayout>

