        <Button
            android:id="@+id/btn_end"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="结束测试"/>

        <Button
            android:id="@+id/btn_get_version"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="获取版本号"/>

