<?xml version="1.0" encoding="utf-8"?>

<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/ll_led_setting"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_alignParentBottom="true"
    android:orientation="horizontal">

    <TextView
        android:id="@+id/tv_led_connect"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_margin="5dp"
        android:background="@drawable/circle_corner_button_selector"
        android:padding="8dp"
        android:text="LED屏连接"
        android:textColor="@color/white"/>

    <TextView
        android:id="@+id/tv_led_lighter"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_margin="5dp"
        android:background="@drawable/circle_corner_button_selector"
        android:padding="8dp"
        android:text="LED屏亮"
        android:textColor="@color/white"/>

    <TextView
        android:id="@+id/tv_led_darker"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_margin="5dp"
        android:background="@drawable/circle_corner_button_selector"
        android:padding="8dp"
        android:text="LED屏暗"
        android:textColor="@color/white"/>

    <TextView
        android:id="@+id/tv_led_self_check"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_margin="5dp"
        android:background="@drawable/circle_corner_button_selector"
        android:padding="8dp"
        android:text="LED屏自检"
        android:textColor="@color/white"/>

    <TextView
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:layout_weight="1"/>

    <TextView
        android:id="@+id/tv_free_test"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_margin="5dp"
        android:background="@drawable/circle_corner_button_selector"
        android:padding="8dp"
        android:text="自由测试"
        android:textColor="@color/white"/>

    <TextView
        android:id="@+id/tv_about"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_margin="5dp"
        android:background="@drawable/circle_corner_button_selector"
        android:padding="8dp"
        android:text="关于"
        android:textColor="@color/white"/>

</LinearLayout>