<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/activity_jump_rope_result"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <TextView
        android:id="@+id/tv_result_title"
        android:layout_width="match_parent"
        android:layout_height="45dp"
        android:gravity="center"
        android:text="本轮成绩"
        android:textSize="20sp" />

    <View
        android:id="@+id/line0"
        android:layout_width="match_parent"
        android:layout_height="0.5dp"
        android:layout_below="@+id/tv_result_title"
        android:layout_marginLeft="5dp"
        android:layout_marginRight="5dp"
        android:background="@color/black" />

    <LinearLayout
        android:id="@+id/ll_timingResult"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/line0"
        android:layout_marginLeft="5dp"
        android:layout_marginRight="5dp"
        android:background="@color/black">

        <TextView
            android:layout_width="0dp"
            android:layout_height="30dp"
            android:layout_marginLeft="0.5dp"
            android:layout_weight="1"
            android:background="#ffffff"
            android:gravity="center"
            android:text="设备号" />

        <!--<TextView-->
        <!--android:layout_width="0dp"-->
        <!--android:layout_height="40dp"-->
        <!--android:layout_marginLeft="1dp"-->
        <!--android:layout_weight="1"-->
        <!--android:background="#ffffff"-->
        <!--android:gravity="center"-->
        <!--android:text="手柄状态"/>-->

        <TextView
            android:layout_width="0dp"
            android:layout_height="30dp"
            android:layout_marginLeft="0.5dp"
            android:layout_weight="2"
            android:background="#ffffff"
            android:gravity="center"
            android:text="姓名" />

        <TextView
            android:layout_width="0dp"
            android:layout_height="30dp"
            android:layout_marginLeft="0.5dp"
            android:layout_marginRight="0.5dp"
            android:layout_weight="2"
            android:background="#ffffff"
            android:gravity="center"
            android:text="成绩" />

        <!--如果这里写卡,那么写哪些成绩呢-->
        <!--产品没有定义这里要写卡-->
        <!--<TextView-->
        <!--android:layout_width="0dp"-->
        <!--android:layout_height="40dp"-->
        <!--android:layout_marginLeft="1dp"-->
        <!--android:layout_weight="1"-->
        <!--android:background="#ffffff"-->
        <!--android:gravity="center"-->
        <!--android:text="写卡"/>-->

    </LinearLayout>

    <View
        android:id="@+id/line1"
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_below="@+id/ll_timingResult"
        android:background="@color/black"
        android:visibility="gone" />

    <ListView
        android:id="@+id/lv_timeResult"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_above="@+id/btn_sure"
        android:layout_below="@+id/line1"
        android:layout_marginBottom="5dp"
        android:visibility="gone"></ListView>


    <android.support.v7.widget.RecyclerView
        android:id="@+id/rv_timeResult"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_above="@+id/btn_sure"
        android:layout_below="@+id/line1"
        android:layout_marginBottom="15dp"
        android:layout_marginLeft="5dp"
        android:layout_marginRight="5dp" />

    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_above="@+id/btn_sure"
        android:background="@color/black" />

    <Button
        android:id="@+id/btn_sure"
        android:layout_width="90dp"
        android:layout_height="30dp"
        android:layout_alignParentBottom="true"
        android:layout_alignParentRight="true"
        android:layout_margin="10dp"
        android:background="@drawable/btn_click_bg"
        android:text="确认"
        android:textColor="@color/black"
        android:textSize="16dp" />

</RelativeLayout>
