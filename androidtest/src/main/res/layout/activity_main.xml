<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout

        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="150dp"
            android:layout_marginTop="@dimen/dp_10"
            android:layout_marginBottom="@dimen/dp_10"
            android:orientation="horizontal">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="50dp"
                android:gravity="center"
                android:minWidth="50dp"
                android:paddingLeft="@dimen/dp_10"
                android:paddingRight="@dimen/dp_10"
                android:text="扫码:" />

            <TextView
                android:id="@+id/btn_codeInfo"
                android:layout_width="wrap_content"
                android:layout_height="35dp"
                android:gravity="center"
                android:paddingLeft="@dimen/dp_10"
                android:paddingRight="@dimen/dp_10"
                android:textColor="#ffff0000" />

        </LinearLayout>

        <TextView
            android:id="@+id/btn_printer"
            android:layout_width="wrap_content"
            android:layout_height="50dp"
            android:layout_marginLeft="150dp"
            android:background="@drawable/btn_click_bg"
            android:gravity="center"
            android:paddingLeft="@dimen/dp_10"
            android:paddingRight="@dimen/dp_10"
            android:text="打印机测试" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="150dp"
            android:layout_marginTop="@dimen/dp_10">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="35dp"
                android:gravity="center"
                android:paddingLeft="@dimen/dp_10"
                android:paddingRight="@dimen/dp_10"
                android:text="IC卡:" />

            <TextView
                android:id="@+id/btn_cardInfo"
                android:layout_width="wrap_content"
                android:layout_height="35dp"
                android:gravity="center"
                android:paddingLeft="@dimen/dp_10"
                android:paddingRight="@dimen/dp_10"
                android:textColor="#ffff0000" />

            <TextView
                android:id="@+id/tv_ic_finger"
                android:layout_width="wrap_content"
                android:layout_height="35dp"
                android:gravity="center"
                android:paddingLeft="@dimen/dp_10"
                android:paddingRight="@dimen/dp_10"
                android:textColor="#ffff0000" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="150dp">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="35dp"
                android:gravity="center"
                android:paddingLeft="@dimen/dp_10"
                android:paddingRight="@dimen/dp_10"
                android:text="身份证:" />

            <TextView
                android:id="@+id/btn_ID_cardInfo"
                android:layout_width="wrap_content"
                android:layout_height="35dp"
                android:gravity="center"
                android:paddingLeft="@dimen/dp_10"
                android:paddingRight="@dimen/dp_10"
                android:textColor="#ffff0000" />

            <TextView
                android:id="@+id/tv_id_finger"
                android:layout_width="wrap_content"
                android:layout_height="35dp"
                android:gravity="center"
                android:paddingLeft="@dimen/dp_10"
                android:paddingRight="@dimen/dp_10"
                android:textColor="#ffff0000" />
        </LinearLayout>

        <TextView
            android:id="@+id/btn_serialPort"
            android:layout_width="wrap_content"
            android:layout_height="50dp"
            android:layout_marginLeft="150dp"
            android:layout_marginTop="@dimen/dp_10"
            android:background="@drawable/btn_click_bg"
            android:gravity="center"
            android:padding="@dimen/dp_10"
            android:text="串口模块" />

        <TextView
            android:id="@+id/btn_screen"
            android:layout_width="wrap_content"
            android:layout_height="50dp"
            android:layout_marginLeft="150dp"
            android:layout_marginTop="@dimen/dp_10"
            android:background="@drawable/btn_click_bg"
            android:gravity="center"
            android:padding="@dimen/dp_10"
            android:text="显示屏测试" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="70dp"
            android:layout_marginBottom="5dp"
            android:gravity="center_vertical"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/btn_link"
                android:layout_width="wrap_content"
                android:layout_height="50dp"
                android:layout_marginLeft="150dp"
                android:background="@drawable/btn_click_bg"
                android:gravity="center"
                android:padding="@dimen/dp_10"
                android:text="868模块测试led" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="30dp"
                android:text="LED屏版本："
                android:textSize="14sp" />

            <Spinner
                android:id="@+id/led_version"
                android:layout_width="200dp"
                android:layout_height="30dp"
                android:layout_alignParentRight="true"
                android:background="@drawable/icon_spinner_bg" />
            <TextView
                android:id="@+id/btn_ledCheck"
                android:layout_width="wrap_content"
                android:layout_height="50dp"
                android:layout_marginLeft="50dp"
                android:background="@drawable/btn_click_bg"
                android:gravity="center"
                android:padding="@dimen/dp_10"
                android:text="led自检" />
        </LinearLayout>

        <TextView
            android:id="@+id/btn_finger"
            android:layout_width="wrap_content"
            android:layout_height="50dp"
            android:layout_marginLeft="150dp"
            android:layout_marginTop="@dimen/dp_10"
            android:background="@drawable/btn_click_bg"
            android:gravity="center"
            android:paddingLeft="@dimen/dp_10"
            android:paddingRight="@dimen/dp_10"
            android:text="指纹模块测试" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="150dp"
            android:layout_marginTop="@dimen/dp_10">

            <TextView
                android:id="@+id/btn_voice"
                android:layout_width="wrap_content"
                android:layout_height="50dp"
                android:background="@drawable/btn_click_bg"
                android:gravity="center"
                android:padding="@dimen/dp_10"
                android:paddingLeft="@dimen/dp_10"
                android:paddingRight="@dimen/dp_10"
                android:text="声音测试" />

            <TextView
                android:id="@+id/btn_volAdd"
                android:layout_width="wrap_content"
                android:layout_height="50dp"
                android:layout_marginLeft="40dp"
                android:background="@drawable/btn_click_bg"
                android:gravity="center"
                android:paddingLeft="40dp"
                android:paddingRight="40dp"
                android:text="音量+" />

            <TextView
                android:id="@+id/btn_volSub"
                android:layout_width="wrap_content"
                android:layout_height="50dp"
                android:layout_marginLeft="40dp"
                android:background="@drawable/btn_click_bg"
                android:gravity="center"
                android:paddingLeft="40dp"
                android:paddingRight="40dp"
                android:text="音量-" />
        </LinearLayout>

        <TextView
            android:id="@+id/btn_vc"
            android:layout_width="wrap_content"
            android:layout_height="50dp"
            android:layout_marginLeft="150dp"
            android:layout_marginTop="@dimen/dp_10"
            android:background="@drawable/btn_click_bg"
            android:gravity="center"
            android:padding="@dimen/dp_10"
            android:text="肺活量模块测试" />

        <TextView
            android:id="@+id/btn_grip"
            android:layout_width="wrap_content"
            android:layout_height="50dp"
            android:layout_marginLeft="150dp"
            android:layout_marginTop="@dimen/dp_10"
            android:background="@drawable/btn_click_bg"
            android:gravity="center"
            android:padding="@dimen/dp_10"
            android:text="握力计模块测试" />
    </LinearLayout>
</ScrollView>

