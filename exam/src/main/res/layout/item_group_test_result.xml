<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:gravity="center"
    android:orientation="horizontal"
    android:padding="5dp">

    <TextView
        android:id="@+id/item_txt_test_time"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="第一次成绩：" />

    <TextView
        android:id="@+id/item_txt_test_result"
        android:layout_width="70dp"
        android:layout_height="wrap_content"
        android:layout_toRightOf="@+id/item_txt_test_time"
        android:gravity="center"
        android:text="121M" />

    <View
        android:layout_width="50dp"
        android:layout_height="1dp"
        android:layout_alignLeft="@+id/item_txt_test_result"
        android:layout_alignRight="@+id/item_txt_test_result"
        android:layout_below="@+id/item_txt_test_result"
        android:background="@color/black" />
</RelativeLayout>