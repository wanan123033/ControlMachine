<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="#E6E6E6"
    android:orientation="horizontal"
    android:paddingBottom="1dp">


    <LinearLayout
        android:id="@+id/item_ll_group_data"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginLeft="1dp"
        android:layout_weight="1"
        android:adjustViewBounds="true"
        android:background="@drawable/data_retieve_selector"
        android:gravity="center_vertical"
        android:minHeight="40.0dip"
        android:orientation="vertical"
        android:paddingLeft="5dp"
        android:paddingRight="5dp">

        <TextView
            android:id="@+id/item_txt_monitoring_serial"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginLeft="1dp"
            android:layout_weight="1.5"
            android:background="@drawable/data_retieve_selector"
            android:gravity="center_vertical"
            android:textSize="18sp" />
    </LinearLayout>


    <TextView
        android:id="@+id/item_txt_bind_time"
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:layout_marginLeft="1dp"
        android:layout_weight="1.2"
        android:adjustViewBounds="true"
        android:background="@drawable/data_retieve_selector"
        android:gravity="center"
        android:minHeight="50.0dip"
        android:textSize="18sp" />

    <RelativeLayout
        android:id="@+id/view_cb_content"
        android:layout_width="80dp"
        android:layout_height="match_parent"
        android:layout_marginLeft="1dp"
        android:layout_marginRight="1dp"
        android:background="@drawable/data_retieve_selector">

        <CheckBox
            android:id="@+id/cb_select"
            android:layout_width="80dp"
            android:layout_height="match_parent"
            android:layout_centerInParent="true"
            android:button="@null"
            android:drawableLeft="@drawable/checkbox_selected"
            android:gravity="center"
            android:paddingLeft="30dp" />

    </RelativeLayout>

</LinearLayout>