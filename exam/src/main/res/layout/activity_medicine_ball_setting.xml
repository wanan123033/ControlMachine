<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="20dp">

    <TextView
        android:id="@+id/tv_device_check"
        android:layout_width="120dp"
        android:layout_height="wrap_content"
        android:layout_centerVertical="true"
        android:layout_marginRight="20dp"
        android:layout_marginBottom="@dimen/dp_10"
        android:layout_toLeftOf="@+id/tv_start_test"
        android:background="@drawable/btn_click_bg"
        android:gravity="center"
        android:padding="8dp"
        android:onClick="checkDevice"
        android:text="终端自检" />

    <TextView
        android:layout_width="120dp"
        android:layout_height="wrap_content"
        android:layout_centerVertical="true"
        android:layout_marginBottom="@dimen/dp_10"
        android:layout_marginRight="20dp"
        android:layout_toLeftOf="@+id/tv_start_test"
        android:background="@drawable/rectangle_blue_grey"
        android:gravity="center"
        android:padding="8dp"
        android:text="查看标准" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center_vertical"
        android:orientation="horizontal">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="终端数量：" />

        <Spinner
            android:id="@+id/sp_device_count"
            android:layout_width="100dp"
            android:background="@drawable/icon_spinner_bg"
            android:layout_height="30dp"
            android:layout_marginLeft="50dp" />

        <TextView
            android:layout_width="90dp"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginLeft="50dp"
            android:layout_marginRight="20dp"
            android:layout_toLeftOf="@+id/tv_start_test"
            android:background="@drawable/btn_click_bg"
            android:gravity="center"
            android:padding="8dp"
            android:text="终端匹配" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/dp_10"
        android:gravity="center_vertical"
        android:orientation="horizontal">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="测试次数：" />

        <Spinner
            android:id="@+id/sp_test_round"
            android:layout_width="100dp"
            android:background="@drawable/icon_spinner_bg"
            android:layout_height="30dp"
            android:layout_marginLeft="50dp" />

    </LinearLayout>

    <LinearLayout
        android:id="@+id/ll_begin_point"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_below="@+id/ll_test_time"
        android:layout_marginTop="@dimen/dp_10"
        android:orientation="horizontal">

        <TextView
            android:layout_gravity="center_vertical"
            style="@style/style_free_test"
            android:text="初始距离" />

        <EditText
            android:layout_gravity="center_vertical"
            android:id="@+id/et_begin_point"
            android:layout_width="wrap_content"
            android:layout_height="40dp"
            android:inputType="number"
            android:minWidth="50dp" />

        <TextView
            android:layout_gravity="center_vertical"
            style="@style/style_free_test"
            android:text="cm" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginRight="@dimen/dp_40"
        android:gravity="left|center_vertical"
        android:layout_centerVertical="true"
        android:orientation="horizontal">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="满分设置：" />
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="男子:"/>
        <EditText
            android:id="@+id/et_full_male"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textCursorDrawable="@drawable/edit_color"
            android:inputType="number"
            android:minWidth="@dimen/dp_40"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="厘米"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="20dp"
            android:text="女子:"/>
        <EditText
            android:id="@+id/et_full_female"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textCursorDrawable="@drawable/edit_color"
            android:inputType="number"
            android:minWidth="@dimen/dp_40"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="厘米"/>

    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/dp_10"
        android:orientation="horizontal">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="满分跳过：" />

        <CheckBox
            android:id="@+id/cb_full_return"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="50dp"
            android:button="@drawable/checkbox_switch_selected" />

    </LinearLayout>

    <RadioGroup
        android:id="@+id/rg_model"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">


        <RadioButton
            android:id="@+id/rb_continue"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:button="@null"
            android:checked="true"
            android:drawableRight="@drawable/checkbox_switch_selected"
            android:text="连续测试：" />

        <RadioButton
            android:id="@+id/rb_recycle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="60dp"
            android:button="@null"
            android:drawableRight="@drawable/checkbox_switch_selected"
            android:text="循环测试：" />
    </RadioGroup>
</LinearLayout>