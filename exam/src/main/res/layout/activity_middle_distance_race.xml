<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:fab="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="horizontal"
    tools:context=".activity.MiddleDistanceRace.MiddleDistanceRaceActivity">

    <Button
        android:id="@+id/btn_udp_send"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:padding="@dimen/dp_10"
        android:text="开始计时"
        android:textSize="20sp"
        android:visibility="gone" />

    <LinearLayout
        android:id="@+id/ll_show_item"
        android:layout_width="400dp"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <RelativeLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_margin="5dp"
            android:background="@drawable/bg_edittext"
            android:padding="10dp">

            <TextView
                android:id="@+id/tv1"
                style="@style/style_setting_tv_title"
                android:layout_marginLeft="10dp"
                android:layout_marginTop="10dp"
                android:text="日程:" />

            <Spinner
                android:id="@+id/sp_race_schedule"
                android:layout_width="240dp"
                android:layout_height="wrap_content"
                android:layout_alignTop="@+id/tv1"
                android:layout_toEndOf="@+id/tv1"
                android:background="@drawable/icon_spinner_bg" />


            <TextView
                android:id="@+id/tv2"
                style="@style/style_setting_tv_title"
                android:layout_below="@+id/tv1"
                android:layout_marginLeft="10dp"
                android:layout_marginTop="30dp"
                android:text="项目:" />

            <Spinner
                android:id="@+id/sp_race_item"
                android:layout_width="150dp"
                android:layout_height="40dp"
                android:layout_alignTop="@+id/tv2"
                android:layout_toEndOf="@+id/tv2"
                android:background="@drawable/icon_spinner_bg" />

            <TextView
                android:id="@+id/tv3"
                style="@style/style_setting_tv_title"
                android:layout_alignBaseline="@+id/tv2"
                android:layout_marginLeft="10dp"
                android:layout_toEndOf="@+id/sp_race_item"
                android:text="状态:" />

            <Spinner
                android:id="@+id/sp_race_state"
                android:layout_width="100dp"
                android:layout_height="40dp"
                android:layout_alignTop="@+id/tv3"
                android:layout_marginLeft="10dp"
                android:layout_toEndOf="@+id/tv3"
                android:background="@drawable/icon_spinner_bg" />
        </RelativeLayout>
        <!--<View-->
        <!--android:id="@+id/view_style"-->
        <!--android:layout_width="30dp"-->
        <!--android:layout_height="30dp"-->
        <!--android:background="@drawable/red_circle" />-->

        <include layout="@layout/item_race_student_group" />

        <android.support.v7.widget.RecyclerView
            android:id="@+id/rv_race_student_group"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@color/background_color"
            android:overScrollMode="never" />
    </LinearLayout>


    <android.support.v7.widget.RecyclerView
        android:id="@+id/rv_race_group"
        android:layout_width="350dp"
        android:layout_height="match_parent"
        android:layout_margin="5dp"
        android:background="@color/background_color"
        android:overScrollMode="never" />

    <!--<android.support.v7.widget.RecyclerView-->
    <!--android:id="@+id/rv_race_result"-->
    <!--android:layout_width="match_parent"-->
    <!--android:layout_height="match_parent"-->
    <!--android:layout_margin="5dp"-->
    <!--android:background="@color/white"-->
    <!--android:overScrollMode="never"-->
    <!--android:visibility="gone" />-->


    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">


        <com.feipulai.exam.view.MiddleRace.ScrollablePanel
            android:id="@+id/race_scrollablePanel"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@color/background_color" />

        <com.feipulai.floatingactionbutton.FloatingActionsMenu
            android:id="@+id/floatMenu"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="right|bottom"
            android:layout_marginBottom="50dp"
            android:layout_marginRight="50dp"
            app:fab_addButtonColorPressed="@color/grey"
            fab:fab_addButtonColorNormal="@color/Red"
            fab:fab_addButtonPlusIconColor="@color/half_black"
            fab:fab_labelStyle="@style/menu_labels_style"
            >

            <com.feipulai.floatingactionbutton.FloatingActionButton
                android:id="@+id/float_button_show"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                fab:fab_colorNormal="@color/blue"
                fab:fab_colorPressed="@color/grey"
                fab:fab_title="隐藏项目组" />

            <com.feipulai.floatingactionbutton.FloatingActionButton
                android:id="@+id/float_button_connect"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                fab:fab_colorNormal="@color/hostStyle"
                fab:fab_colorPressed="@color/grey"
                fab:fab_title="连接设备" />
            <com.feipulai.floatingactionbutton.FloatingActionButton
                android:id="@+id/float_button_item_set"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                fab:fab_colorNormal="@color/hostStyle"
                fab:fab_colorPressed="@color/grey"
                fab:fab_icon="@mipmap/icon_setting"
                fab:fab_title="项目设置" />

        </com.feipulai.floatingactionbutton.FloatingActionsMenu>
    </FrameLayout>
</LinearLayout>