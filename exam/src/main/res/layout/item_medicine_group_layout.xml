<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="80dp">
    <TextView
        android:layout_margin="5dp"
        android:id="@+id/tv_num"
        android:text="1"
        android:gravity="center"
        android:layout_centerVertical="true"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@drawable/grey_circle"/>
    <ImageView
        android:id="@+id/iv_medicine_group"
        android:layout_toRightOf="@+id/tv_num"
        android:layout_marginLeft="20dp"
        android:layout_centerVertical="true"
        android:layout_width="60dp"
        android:layout_height="60dp"
        android:src="@mipmap/avatar"/>
    <RelativeLayout
        android:layout_toRightOf="@+id/iv_medicine_group"
        android:layout_marginLeft="20dp"
        android:layout_width="wrap_content"
        android:layout_height="match_parent">
        <TextView
            android:layout_marginTop="15dp"
            android:textColor="@color/black"
            android:text="学号：21080789"
            android:id="@+id/tv_stuCode"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />

        <TextView
            android:layout_marginBottom="15dp"
            android:layout_alignParentBottom="true"
            android:textColor="@color/black"
            android:text="姓名：张三"
            android:id="@+id/tv_stuName"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />
    </RelativeLayout>
    <RelativeLayout
        android:layout_toLeftOf="@+id/rl_right"
        android:layout_marginRight="20dp"
        android:layout_width="wrap_content"
        android:layout_height="match_parent">
        <TextView
            android:layout_marginTop="15dp"
            android:textColor="@color/black"
            android:text="成绩1：______"
            android:id="@+id/tv_mark1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />

        <TextView
            android:layout_marginBottom="15dp"
            android:layout_alignParentBottom="true"
            android:textColor="@color/black"
            android:text="成绩2：______"
            android:id="@+id/tv_mark2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />
    </RelativeLayout>
    <RelativeLayout
        android:id="@+id/rl_right"
        android:layout_alignParentRight="true"
        android:layout_marginRight="50dp"
        android:layout_centerVertical="true"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" >
        <ImageView
            android:id="@+id/iv_device_state"
            android:layout_marginRight="25dp"
            android:layout_width="20dp"
            android:layout_height="20dp"
            android:src="@drawable/ic_radio_checked"/>

        <TextView
            android:layout_below="@+id/iv_device_state"
            android:id="@+id/tv_device_state"
            android:layout_width="wrap_content"
            android:layout_height="20dp"
            android:textSize="14sp"
            android:textColor="#33CC00"
            android:text="设备状态"/>
    </RelativeLayout>

</RelativeLayout>
