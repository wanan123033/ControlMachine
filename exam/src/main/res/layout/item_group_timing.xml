<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@drawable/bg_edittext"
    android:orientation="vertical"
    android:padding="5dp">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="2dp">
        <TextView
            android:id="@+id/tv_timing_group"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="20sp"
            android:padding="5dp"
            />

        <TextView
            android:id="@+id/tv_timing_state"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginRight="@dimen/dp_10"
            android:layout_toLeftOf="@+id/timer"
            android:background="@drawable/bg_edittext"
            android:padding="5dp"
            android:text="空闲"
            android:textSize="20sp" />

        <Chronometer
            android:id="@+id/timer"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:background="@color/black"
            android:format="00:00:00"
            android:gravity="center"
            android:padding="5dp"
            android:textColor="@color/white"
            android:textSize="20sp" />
    </RelativeLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="5dp"
        android:orientation="horizontal">

        <Button
            android:id="@+id/btn_timing_wait"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="等待发令" />

        <Button
            android:id="@+id/btn_timing_back"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_toRightOf="@+id/btn_timing_wait"
            android:text="违规返回" />

        <Button
            android:id="@+id/btn_timing_complete"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_toRightOf="@+id/btn_timing_back"
            android:text="完成计时" />

    </RelativeLayout>

    <TextView
        android:id="@+id/tv_timing_time"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/bg_edittext"
        android:gravity="right"
        android:padding="5dp"
        android:text="发令时刻："
        android:textSize="20sp" />
</LinearLayout>
