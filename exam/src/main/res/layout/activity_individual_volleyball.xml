<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    android:orientation="horizontal">

    <include layout="@layout/layout_stu_info" />

    <View
        android:layout_width="8dp"
        android:layout_height="match_parent"
        android:background="@color/grey_light" />

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@color/white"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:gravity="center_vertical"
                android:orientation="horizontal">

                <LinearLayout
                    android:id="@+id/ll_individual_check"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:orientation="horizontal" />

                <TextView
                    android:id="@+id/tv_led_setting"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:layout_marginLeft="5dp"
                    android:layout_toLeftOf="@+id/tv_start_test"
                    android:background="@color/colorAccent"
                    android:drawableLeft="@mipmap/icon_led_setting"
                    android:drawablePadding="6dp"
                    android:gravity="center"
                    android:paddingLeft="8dp"
                    android:paddingRight="8dp"
                    android:text="外接屏幕"
                    android:visibility="gone"
                    android:textColor="@color/white"
                    android:textSize="20dp" />
                <TextView
                    android:id="@+id/tv_pair"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:layout_marginLeft="5dp"
                    android:background="@color/colorAccent"
                    android:drawablePadding="6dp"
                    android:gravity="center"
                    android:paddingLeft="8dp"
                    android:paddingRight="8dp"
                    android:text="设备配对"
                    android:textColor="@color/white"
                    android:textSize="20dp" />
                <ImageView
                    android:id="@+id/img_AFR"
                    android:layout_width="60dp"
                    android:layout_height="35dp"
                    android:layout_marginLeft="10dp"
                    android:layout_toLeftOf="@+id/tv_pair"
                    android:background="@drawable/btn_bg_green"
                    android:gravity="center"
                    android:padding="5dp"
                    android:src="@mipmap/icon_afr"
                    android:textColor="@color/white"
                    android:textSize="20dp" />
            </LinearLayout>

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="276dp"
                android:background="#313131">

                <TextView
                    android:id="@+id/tv_result"
                    android:layout_width="362dp"
                    android:layout_height="154dp"
                    android:layout_centerHorizontal="true"
                    android:layout_marginTop="30dp"
                    android:background="@mipmap/icon_test_result_bg"
                    android:gravity="center"
                    android:textColor="@color/white"
                    android:textSize="61sp" />

                <TextView
                    android:id="@+id/tv_time_count"
                    android:layout_width="200dp"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/tv_result"
                    android:layout_centerHorizontal="true"
                    android:layout_marginTop="5dp"
                    android:background="@drawable/bg_count_text"
                    android:gravity="center"
                    android:padding="5dp"
                    android:textSize="40sp"
                    android:visibility="gone" />


                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_alignParentBottom="true"
                    android:background="@mipmap/icon_device_bg"
                    android:gravity="right"
                    android:padding="10dp">

                    <CheckBox
                        android:id="@+id/cb_device_state"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginRight="@dimen/dp_10"
                        android:button="@null"
                        android:checked="true"
                        android:drawableLeft="@drawable/cb_device_state"
                        android:drawablePadding="10dp"
                        android:enabled="false"
                        android:paddingLeft="35dp"
                        android:text="设备状态"
                        android:textColor="@color/white"
                        android:textSize="16sp" />

                </LinearLayout>

            </RelativeLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="horizontal">

                <android.support.v7.widget.RecyclerView
                    android:id="@+id/rv_test_result"
                    android:layout_width="579dp"
                    android:layout_height="match_parent"
                    android:background="@color/white"
                    android:overScrollMode="never" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="vertical"
                    android:padding="5dp">

                    <TextView
                        android:id="@+id/tv_start_test"
                        android:layout_width="match_parent"
                        android:layout_height="0dp"
                        android:layout_margin="5dp"
                        android:layout_weight="1"
                        android:background="@drawable/btn_background"
                        android:gravity="center"
                        android:text="开始测试"
                        android:textColor="@color/white"
                        android:textSize="22sp"
                        android:visibility="gone" />

                    <TextView
                        android:id="@+id/tv_exit_test"
                        android:layout_width="match_parent"
                        android:layout_height="0dp"
                        android:layout_margin="5dp"
                        android:layout_weight="1"
                        android:background="@drawable/btn_background"
                        android:gravity="center"
                        android:text="退出测试"
                        android:textColor="@color/white"
                        android:textSize="22sp"
                        android:visibility="gone" />


                    <TextView
                        android:id="@+id/tv_stop_test"
                        android:layout_width="match_parent"
                        android:layout_height="0dp"
                        android:layout_margin="5dp"
                        android:layout_weight="1"
                        android:background="@drawable/btn_background"
                        android:gravity="center"
                        android:text="结束测试"
                        android:textColor="@color/white"
                        android:textSize="22sp"
                        android:visibility="gone" />


                    <TextView
                        android:id="@+id/tv_print"
                        android:layout_width="match_parent"
                        android:layout_height="0dp"
                        android:layout_margin="5dp"
                        android:layout_weight="1"
                        android:background="@drawable/btn_background"
                        android:gravity="center"
                        android:text="打印"
                        android:textColor="@color/white"
                        android:textSize="22sp"
                        android:visibility="gone" />

                    <TextView
                        android:id="@+id/tv_punish"
                        android:layout_width="match_parent"
                        android:layout_height="0dp"
                        android:layout_margin="5dp"
                        android:layout_weight="1"
                        android:background="@drawable/btn_background"
                        android:gravity="center"
                        android:text="判罚"
                        android:textColor="@color/white"
                        android:textSize="22sp"
                        android:visibility="gone" />

                    <TextView
                        android:id="@+id/tv_confirm"
                        android:layout_width="match_parent"
                        android:layout_height="0dp"
                        android:layout_margin="5dp"
                        android:layout_weight="1"
                        android:background="@drawable/btn_background"
                        android:gravity="center"
                        android:text="确定"
                        android:textColor="@color/white"
                        android:textSize="22sp"
                        android:visibility="gone" />

                    <TextView
                        android:id="@+id/tv_abandon_test"
                        android:layout_width="match_parent"
                        android:layout_height="0dp"
                        android:layout_margin="5dp"
                        android:layout_weight="1"
                        android:background="@drawable/btn_background"
                        android:gravity="center"
                        android:visibility="gone"
                        android:text="放弃测试"
                        android:textColor="@color/white"
                        android:textSize="22sp" />

                    <TextView
                        android:id="@+id/tv_finish_test"
                        android:layout_width="match_parent"
                        android:layout_height="0dp"
                        android:layout_margin="5dp"
                        android:layout_weight="1"
                        android:background="@drawable/btn_background"
                        android:gravity="center"
                        android:text="测试完成"
                        android:visibility="gone"
                        android:textColor="@color/white"
                        android:textSize="22sp" />


                </LinearLayout>

            </LinearLayout>

        </LinearLayout>

        <ListView
            android:id="@+id/lv_results"
            android:layout_width="321dp"
            android:layout_height="260dp"
            android:layout_marginLeft="190dp"
            android:layout_marginTop="40dp"
            android:background="@drawable/btn_bg_white"
            android:divider="@color/sbc_header_text"
            android:dividerHeight="1dp"
            android:paddingBottom="@dimen/dp_10"
            android:paddingLeft="20dp"
            android:paddingRight="20dp"
            android:paddingTop="@dimen/dp_10"
            android:visibility="gone" />
        <FrameLayout
            android:id="@+id/frame_camera"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginTop="40dp"
            android:background="@color/black"
            android:visibility="gone"/>
    </RelativeLayout>

</LinearLayout>
