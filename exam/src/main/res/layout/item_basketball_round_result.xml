<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/view_content"
    android:layout_width="match_parent"
    android:layout_height="42dp"
    android:background="@color/grey_F7">


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="42dp"
        android:gravity="center"
        android:orientation="horizontal">


        <TextView
            android:id="@+id/item_txt_round"
            android:layout_width="70dp"
            android:layout_height="42dp"
            android:gravity="center"
            android:text="轮次"
            android:textSize="@dimen/sp_16" />

        <com.feipulai.exam.view.MySpinner
            android:id="@+id/item_sp_round_result"
            android:layout_width="200dp"
            android:layout_height="35dp"
            android:background="@drawable/icon_spinner_bg"
            android:paddingRight="30dp" />

        <TextView
            android:id="@+id/item_txt_practical_result"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:gravity="center"
            android:text="实际成绩"
            android:textSize="@dimen/sp_16" />

        <TextView
            android:id="@+id/item_txt_penalize_num"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:gravity="center"
            android:text="违例数"
            android:textSize="@dimen/sp_16" />

        <TextView
            android:id="@+id/item_txt_result_status"
            android:layout_width="100dp"
            android:layout_height="match_parent"
            android:gravity="center"
            android:text="状态"
            android:textSize="@dimen/sp_16" />
    </LinearLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_alignParentBottom="true"
        android:background="@color/grey_light" />
</RelativeLayout>