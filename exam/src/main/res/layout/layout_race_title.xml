<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="50dp"
    android:background="@color/colorPrimary">

    <Button
        android:id="@+id/btn_middle_back"
        android:layout_width="15dp"
        android:layout_height="25dp"
        android:layout_centerVertical="true"
        android:layout_marginStart="@dimen/dp_15"
        android:background="@mipmap/icon_white_goback" />

    <TextView
        android:id="@+id/tv_back"
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:layout_toEndOf="@+id/btn_middle_back"
        android:gravity="center"
        android:paddingEnd="@dimen/dp_10"
        android:paddingStart="@dimen/dp_15"
        android:text="返回"
        android:textColor="@color/white"
        android:textSize="18sp" />

    <View
        android:id="@+id/view_connect_state"
        android:layout_width="35dp"
        android:layout_height="35dp"
        android:layout_centerVertical="true"
        android:layout_toStartOf="@+id/btn_fullscreen"
        android:layout_marginEnd="30dp"
        android:background="@drawable/red_circle" />

    <com.feipulai.exam.activity.MiddleDistanceRace.ImageTextButton
        android:id="@+id/btn_fullscreen"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerVertical="true"
        android:layout_marginBottom="2dp"
        android:layout_marginEnd="30dp"
        android:layout_marginTop="2dp"
        android:layout_toStartOf="@+id/btn_image_connect" />

    <com.feipulai.exam.activity.MiddleDistanceRace.ImageTextButton
        android:id="@+id/btn_image_connect"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerVertical="true"
        android:layout_marginBottom="2dp"
        android:layout_marginEnd="30dp"
        android:layout_marginTop="2dp"
        android:layout_toStartOf="@+id/btn_setting" />

    <com.feipulai.exam.activity.MiddleDistanceRace.ImageTextButton
        android:id="@+id/btn_setting"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentEnd="true"
        android:layout_centerVertical="true"
        android:layout_marginBottom="2dp"
        android:paddingStart="@dimen/dp_10"
        android:paddingEnd="@dimen/dp_10"
        android:layout_marginEnd="20dp"
        android:layout_marginTop="2dp" />
</RelativeLayout>
