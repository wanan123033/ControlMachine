<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/view_content"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/transparent"
    android:gravity="center_horizontal"
    android:orientation="vertical">

    <RelativeLayout
        android:layout_width="248dp"
        android:layout_height="match_parent"
        android:background="@drawable/grey_border">

        <ImageView
            android:id="@+id/item_img_portrait"
            android:layout_width="57dp"
            android:layout_height="74dp"
            android:scaleType="fitXY"
            android:layout_margin="10dp"
            android:background="@color/white" />

        <CheckBox
            android:id="@+id/cb_device_state"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_margin="@dimen/dp_15"
            android:button="@null"
            android:checked="true"
            android:clickable="false"
            android:drawablePadding="15dp"
            android:drawableRight="@drawable/cb_device_state"
            android:enabled="false"
            android:text="1号设备状态"
            android:textColor="@color/white"
            android:textSize="14sp" />

        <CheckBox
            android:id="@+id/sw_device_close"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_marginRight="10dp"
            android:layout_marginTop="55dp"
            android:button="@null"
            android:drawableRight="@drawable/checkbox_switch_selected"
            android:text="关闭设备"
            android:textColor="@color/white"
            android:textSize="14sp" />

        <LinearLayout
            android:id="@+id/ll_name"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/item_img_portrait"
            android:orientation="horizontal"
            android:paddingLeft="6dp"
            android:paddingRight="10dp">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="姓名："
                android:textColor="@color/grey_A8"
                android:textSize="18sp" />

            <TextView
                android:id="@+id/txt_stu_name"
                android:layout_width="wrap_content"
                android:layout_height="27dp"
                android:background="@drawable/edit_search_bg"
                android:paddingLeft="5dp"
                android:textColor="@color/grey_A8"
                android:textSize="18sp" />
        </LinearLayout>

        <LinearLayout
            android:id="@+id/ll_stu_id"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/ll_name"
            android:layout_marginTop="10dp"
            android:orientation="horizontal"
            android:paddingLeft="6dp"
            android:paddingRight="10dp">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="学号："
                android:textColor="@color/grey_A8"
                android:textSize="18sp" />

            <TextView
                android:id="@+id/txt_stu_code"
                android:layout_width="wrap_content"
                android:layout_height="27dp"
                android:background="@drawable/edit_search_bg"
                android:paddingLeft="5dp"
                android:textColor="@color/grey_A8"
                android:textSize="18sp" />
        </LinearLayout>

        <TextView
            android:id="@+id/item_txt_test_result"
            android:layout_width="match_parent"
            android:layout_height="52dp"
            android:layout_below="@+id/ll_stu_id"
            android:layout_marginLeft="5dp"
            android:layout_marginRight="5dp"
            android:layout_marginTop="15dp"
            android:background="@mipmap/icon_test_result_bg"
            android:gravity="center"
            android:textColor="@color/white"
            android:textSize="30sp" />

        <TextView
            android:id="@+id/item_txt_test_result1"
            android:layout_width="match_parent"
            android:layout_height="52dp"
            android:layout_below="@+id/item_txt_test_result"
            android:layout_marginLeft="5dp"
            android:layout_marginRight="5dp"
            android:layout_marginTop="15dp"
            android:background="@mipmap/icon_test_result_bg"
            android:gravity="center"
            android:textColor="@color/white"
            android:textSize="30sp"
            android:visibility="invisible" />

        <TextView
            android:id="@+id/item_txt_test_result2"
            android:layout_width="match_parent"
            android:layout_height="52dp"
            android:layout_below="@+id/item_txt_test_result1"
            android:layout_marginLeft="5dp"
            android:layout_marginRight="5dp"
            android:layout_marginTop="15dp"
            android:background="@mipmap/icon_test_result_bg"
            android:gravity="center"
            android:textColor="@color/white"
            android:textSize="30sp"
            android:visibility="invisible" />

        <TextView
            android:id="@+id/txt_skip"
            style="@style/style_setting_tv_title"
            android:layout_width="90dp"
            android:layout_height="48dp"
            android:layout_alignParentBottom="true"
            android:layout_marginBottom="@dimen/dp_10"
            android:layout_marginLeft="5dp"
            android:background="@drawable/btn_background"
            android:gravity="center"
            android:text="跳过"
            android:textColor="@color/white" />

        <TextView
            android:id="@+id/txt_punish"
            style="@style/style_setting_tv_title"
            android:layout_width="90dp"
            android:layout_height="48dp"
            android:layout_alignParentBottom="true"
            android:layout_marginBottom="@dimen/dp_10"
            android:layout_marginLeft="5dp"
            android:background="@drawable/btn_background"
            android:gravity="center"
            android:text="判罚"
            android:textColor="@color/white"
            android:visibility="gone" />

        <TextView
            android:id="@+id/txt_start"
            style="@style/style_setting_tv_title"
            android:layout_width="90dp"
            android:layout_height="48dp"
            android:layout_alignParentBottom="true"
            android:layout_alignParentRight="true"
            android:layout_marginBottom="@dimen/dp_10"
            android:layout_marginRight="5dp"
            android:background="@drawable/btn_background"
            android:gravity="center"
            android:text="开始"
            android:textColor="@color/white" />

        <TextView
            android:id="@+id/txt_confirm"
            style="@style/style_setting_tv_title"
            android:layout_width="90dp"
            android:layout_height="48dp"
            android:layout_alignParentBottom="true"
            android:layout_alignParentRight="true"
            android:layout_marginBottom="@dimen/dp_10"
            android:layout_marginRight="5dp"
            android:background="@drawable/btn_background"
            android:gravity="center"
            android:text="确定"
            android:textColor="@color/white"
            android:visibility="gone" />

    </RelativeLayout>


</LinearLayout>