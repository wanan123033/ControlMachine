            android:padding="8dp"
            android:text="查看标准"  />-->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:layout_marginTop="5dp"
            android:gravity="center_vertical"
            android:orientation="horizontal">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="原地起跳：" />

            <CheckBox
                android:id="@+id/cb_run_up"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="50dp"
                android:button="@drawable/checkbox_switch_selected" />
        </LinearLayout>

        <!--<LinearLayout-->
        <!--android:layout_width="match_parent"-->
        <!--android:layout_height="50dp"-->
        <!--android:layout_marginTop="@dimen/dp_10"-->
        <!--android:gravity="center_vertical"-->
        <!--android:orientation="horizontal"-->
        <!--android:visibility="gone">-->

        <!--<TextView-->
        <!--android:layout_width="wrap_content"-->
        <!--android:layout_height="wrap_content"-->
        <!--android:text="无线测试：" />-->

        <!--<CheckBox-->
        <!--android:id="@+id/cb_wireless"-->
        <!--android:layout_width="wrap_content"-->
        <!--android:layout_height="wrap_content"-->
        <!--android:layout_marginLeft="50dp"-->
        <!--android:button="@drawable/checkbox_switch_selected" />-->
        <!--</LinearLayout>-->

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center_vertical"
            android:orientation="horizontal">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="终端数量：" />

            <Spinner
                android:id="@+id/sp_device_count"
                android:layout_width="100dp"
                android:layout_height="30dp"
                android:layout_marginLeft="50dp"
                android:background="@drawable/icon_spinner_bg" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/dp_10"
            android:gravity="center_vertical"
            android:orientation="horizontal">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="测试次数：" />

            <Spinner
                android:id="@+id/sp_test_round"
                android:layout_width="100dp"
                android:layout_height="30dp"
                android:layout_marginLeft="50dp"
                android:background="@drawable/icon_spinner_bg" />

        </LinearLayout>

        <LinearLayout
            android:id="@+id/ll_begin_point"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:layout_marginTop="@dimen/dp_10"
            android:orientation="horizontal">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:text="起始高度" />

            <EditText
                android:id="@+id/et_begin_point"
                android:layout_width="wrap_content"
                android:layout_height="40dp"
                android:layout_gravity="center_vertical"
                android:inputType="number"
                android:minWidth="50dp" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:text="厘米" />

            <TextView
                android:id="@+id/tv_accuracy_use"
                android:layout_width="70dp"
                android:layout_height="35dp"
                android:layout_marginLeft="30dp"
                android:background="@drawable/btn_click_bg"
                android:gravity="center"
                android:padding="8dp"
                android:text="应用" />
        </LinearLayout>

        <LinearLayout
            android:id="@+id/ll_light"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:layout_marginTop="@dimen/dp_10"
            android:orientation="horizontal">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:text="亮度调节" />
            <TextView
                android:id="@+id/tv_light_minus"
                android:layout_width="70dp"
                android:layout_height="35dp"
                android:layout_marginLeft="30dp"
                android:background="@drawable/btn_click_bg"
                android:gravity="center"
                android:padding="8dp"
                android:text="亮度-" />

            <TextView
                android:id="@+id/tv_light_add"
                android:layout_width="70dp"
                android:layout_height="35dp"
                android:layout_marginLeft="30dp"
                android:background="@drawable/btn_click_bg"
                android:gravity="center"
                android:padding="8dp"
                android:text="亮度+" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginRight="@dimen/dp_40"
            android:gravity="left|center_vertical"
            android:orientation="horizontal">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="满分设置：" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="男子:" />

            <EditText
                android:id="@+id/et_full_male"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:inputType="number"
                android:minWidth="@dimen/dp_40"
                android:textCursorDrawable="@drawable/edit_color" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="厘米" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="20dp"
                android:text="女子:" />

            <EditText
                android:id="@+id/et_full_female"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:inputType="number"
                android:minWidth="@dimen/dp_40"
                android:textCursorDrawable="@drawable/edit_color" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="厘米" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/dp_10"
            android:orientation="horizontal">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="满分跳过：" />

            <CheckBox
                android:id="@+id/cb_full_return"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="50dp"
                android:button="@drawable/checkbox_switch_selected" />

        </LinearLayout>

        <RadioGroup
            android:id="@+id/rg_model"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">


            <RadioButton
                android:id="@+id/rb_continue"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:button="@null"
                android:checked="true"
                android:drawableRight="@drawable/checkbox_switch_selected"
                android:text="连续测试：" />

            <RadioButton
                android:id="@+id/rb_recycle"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="60dp"
                android:button="@null"
                android:drawableRight="@drawable/checkbox_switch_selected"
                android:text="循环测试：" />
        </RadioGroup>
    </LinearLayout>
</android.support.v4.widget.NestedScrollView>