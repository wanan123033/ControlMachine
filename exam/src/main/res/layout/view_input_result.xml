<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:background="#00000000"
    android:padding="10dp">

    <LinearLayout
        android:layout_width="400dp"
        android:layout_height="wrap_content"
        android:layout_centerInParent="true"
        android:background="@drawable/btn_bg_white"
        android:focusableInTouchMode="true"
        android:gravity="center"
        android:orientation="vertical"
        android:padding="15dp">

        <TextView
            android:id="@+id/txt_stu_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="10dp"
            android:text="考生姓名"
            android:textSize="18sp" />

        <TextView
            android:id="@+id/txt_stu_code"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="20dp"
            android:text="考号"
            android:textSize="18sp" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:orientation="horizontal">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="手输成绩：" />

            <EditText
                android:id="@+id/edit_stu_result"
                android:layout_width="150dp"
                android:layout_height="wrap_content"
                android:hint="请输入成绩"
                android:imeOptions="actionNext"
                android:inputType="numberSigned|numberDecimal"
                android:maxLines="1" />

            <TextView
                android:id="@+id/txt_unit"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="厘米" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:orientation="horizontal">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="成绩状态：" />

            <Spinner
                android:id="@+id/sp_result_state"
                android:layout_width="180dp"
                android:layout_height="35dp"
                android:background="@drawable/icon_spinner_bg"
                android:paddingLeft="@dimen/dp_10" />
        </LinearLayout>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/dp_10"
            android:text="成绩输入请严格按照项目成绩格式输入，不进行格式验证\n时间单位请按照秒输入"
            android:textColor="@color/red_btn_bg_color" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp"
            android:gravity="center"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/view_txt_cancel"
                android:layout_width="90dp"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:background="@drawable/btn_click_bg"
                android:gravity="center"
                android:padding="5dp"
                android:text="取消" />

            <TextView
                android:id="@+id/view_txt_confirm"
                android:layout_width="90dp"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:layout_marginLeft="80dp"
                android:background="@drawable/btn_click_bg"
                android:gravity="center"
                android:padding="5dp"
                android:text="确定" />
        </LinearLayout>
    </LinearLayout>

</RelativeLayout>
